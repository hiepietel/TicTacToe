<MyLayout>
    cols: 1
    rows: 2
    GridLayout:
        cols: 1
        rows: 1
        Label:
            id: mylabel
            text:"TicTacToe"
    GridLayout:
        id: "grid"
        cols: 3
        rows: 3
        padding: 20
        Button:
            text: "Click me!"
            id: "btn"
            on_press: root.printMe(1,1)
        MyButton:
            text: "O"
            font_color: "red"
            on_press: self.choose(1,2)
        MyButton:
            text: "X"
            on_press: self.choose(1,3)
        MyButton:
            text: "O"
            on_press: self.choose(2,1)
        MyButton:
            text: "O"
            on_press: self.choose(2,2)
        MyButton:
            #margin: 20
            text: "X"
            on_press: self.choose(2,3)
        MyButton:
            text: "O"
            on_press: self.choose(3,1)
        MyButton:
            text: "0"
        MyButton:
            text: "0"